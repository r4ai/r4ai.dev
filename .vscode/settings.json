{
  "tailwindCSS.experimental.classRegex": [
    // @see https://www.tailwind-variants.org/docs/getting-started#intellisense-setup-optional
    ["tv\\((([^()]*|\\([^()]*\\))*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "[yaml]": {
    "tailwindCSS.experimental.classRegex": [
      // key名がtwで始まるものをtailwindのクラスとして認識する
      // e.g. twColor: text-red-500;
      // > https://github.com/tailwindlabs/tailwindcss-intellisense/issues/270
      // "tw.*:(?:.|\n)*?[\"'`]([^\"'`]*).*?,",
    ]
  },
  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "mdx.server.enable": true,
  "auto-close-tag.activationOnLanguage": [
    "mdx",
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (EEx)",
    "HTML (Eex)",
    "plist"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.experimental.useFlatConfig": true,
  "cSpell.words": ["Pagefind"]
}
