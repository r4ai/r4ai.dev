{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src",
    "scripts",
    "astro.config.ts",
    "eslint.config.js",
    "lint-staged.config.js",
    "postcss.config.cjs",
    "prettier.config.js",
    "tailwind.config.ts"
  ],
  "mdx": {
    "plugins": [
      ["remark-frontmatter", ["toml", "yaml"]],
      "remark-gfm",
      "remark-math"
    ]
  }
}
