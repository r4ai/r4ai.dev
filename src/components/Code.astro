---
import { type BuiltinLanguage, type BuiltinTheme } from "shiki"
import { highlighter } from "@/lib/shiki"

type Props = {
  code: string
  lang: BuiltinLanguage
  theme: BuiltinTheme
  class?: string
}
const props = Astro.props

const html = highlighter.codeToHtml(props.code, {
  lang: props.lang,
  theme: props.theme,
})
---

<Fragment set:html={html} class={props.class} />
