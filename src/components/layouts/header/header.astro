---
import type { HTMLAttributes } from "astro/types"

import HeaderDesktop from "./header-desktop.astro"
import HeaderMobile from "./header-mobile.astro"

export type Props = HTMLAttributes<"header">
const props = Astro.props
---

<header class="sticky top-4 z-30" {...props}>
  <HeaderDesktop {...props} />
  <HeaderMobile {...props} />
</header>
