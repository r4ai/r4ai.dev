---
import { Image } from "astro:assets";

interface Props {
  href: string;
  icon: ImageMetadata;
  title: string;
  alt: string;
  shouldInvert?: boolean;
}

const { href, icon, title, alt, shouldInvert = false } = Astro.props;
---

<a {href} aria-label={title} class="inline-block">
  <div
    class="transition-colors flex flex-row py-3 px-3 gap-3 rounded-md shadow-sm border dark:border-neutral-800 hover:bg-neutral-50 dark:hover:bg-neutral-900 dark:text-neutral-300 dark:hover:text-neutral-200 hover:underline"
  >
    <Image
      src={icon}
      alt={alt}
      class={`h-5 w-5 ${shouldInvert ? "invert" : ""} dark:invert-0`}
    />
    <p class={"text-sm after:content-['â†—']"}>
      {alt + " " + title}
    </p>
  </div>
</a>
